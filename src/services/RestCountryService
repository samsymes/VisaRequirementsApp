class RestCountryService {
  constructor() {
    this.countryList = [];
  }
  async getDestinationCountryInfoFromRestCountryService(code) {
    const response = await fetch(
      `https://restcountries.com/v3.1/alpha/${code}`
    );
    const countryData = await response.json();
    const restCountryList = Object.entries(countryData).map(
      ([value, label]) => ({
        value,
        label,
      })
    );
    console.log("2", restCountryList); //returns object
    return restCountryList;
  }
  getCountryNameFromRestCountryService() {}
  getCurrencyRestCountryService() {}
  getlanguagesRestCountryService() {}
  getCapitalRestCountryService() {}
  getTimeZoneRestCountryService() {}
  getCallingCodeRestCountryService() {}
  getPopulationRestCountryService() {}
  getSymbolRestCountryService() {}
  getCapitalLatLngRestCountryService() {}
}

export default new RestCountryService();
